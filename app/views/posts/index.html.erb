<h1>Posts</h1>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= link_to "New Post", new_post_path %>
      <table class="table">
        <thead>
          <th>ID</th>
          <th>TITLE</th>
          <th>BODY</th>
          <% if logged_in? %>
            <th>AUTHOR</th>
          <% end %>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.id %></td>
              <td><%= post.title %></td>
              <td><%= post.body %></td>
              <% if logged_in? %>
                <td><%= post.user.name %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      
      </table>
    </div>
  </div>
</div>